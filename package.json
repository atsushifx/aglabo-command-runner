{
  "name": "@aglabo/command-runner",
  "_comment": "@(#) : Shell command execution library with TypeScript support and comprehensive error handling",
  "version": "0.0.1",
  "description": "Type-safe shell command execution library for Node.js with promise-based API, streaming support, and detailed error handling",
  "author": "atsushifx <https://github.com/atsushifx>",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#/*": "./src/*",
    "#shared/*": "./shared/*",
    "#runtime/*": "./src/runtime/*"
  },
  "keywords": [
    "shell",
    "command",
    "exec",
    "child-process",
    "typescript",
    "promise",
    "async",
    "subprocess",
    "execution"
  ],
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@commitlint/types": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@ls-lint/ls-lint": "^2.3.1",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.17"
  },
  "scripts": {
    "prepare": "bash scripts/prepare.sh",
    "clean": "pnpm rimraf dist",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "check:types": "tsc --noEmit --incremental",
    "check:spells": "cspell  --config .vscode/cspell.json --cache --cache-location .cache/cspell/cSpellCache",
    "lint": "pnpm exec eslint --config ./configs/eslint.config.js --cache --cache-location .cache/eslint-cache/esLintCache ",
    "lint:types": "pnpm exec eslint --config ./configs/eslint.config.typed.js --cache --cache-location .cache/eslint-cache/esLintCacheTypes",
    "lint:deno": "pnpm exec deno lint",
    "lint:bun": "pnpm exec eslint --config ./configs/eslint.config.bun.js --cache --cache-location .cache/eslint-cache/esLintCache-bun ",
    "lint:filenames": "pnpm exec ls-lint --config ./configs/ls-lint.yaml ",
    "lint:text": "textlint --config ./configs/textlintrc.yaml --cache --cache-location .cache/textlint-cache/textlintCache ",
    "lint:markdown": "markdownlint-cli2 --config ./configs/.markdownlint.yaml ",
    "test:all": "concurrently \"pnpm run test:develop\" \"pnpm run test:functional\" \"pnpm run test:ci\" \"pnpm run test:e2e\" \"pnpm run test:runtime\" ",
    "test:develop": "pnpm exec vitest run --config ./configs/vitest.config.unit.ts",
    "test:functional": "pnpm exec vitest run --config ./configs/vitest.config.functional.ts",
    "test:ci": "pnpm exec vitest run --config ./configs/vitest.config.integration.ts",
    "test:e2e": "pnpm exec vitest run --config ./configs/vitest.config.e2e.ts",
    "test:runtime": "concurrently \"pnpm run test:runtime:node\" \"pnpm run test:runtime:deno\" \"pnpm run test:runtime:bun\" ",
    "test:runtime:node": "pnpm exec vitest run --config ./configs/vitest.config.runtime.ts ",
    "test:runtime:deno": "deno test tests/runtime/deno/*.spec.ts",
    "test:runtime:bun": "bun test tests/runtime/bun/",
    "lint:secrets": "secretlint --secretlintrc ./configs/secretlint.config.yaml --secretlintignore .gitignore --maskSecrets **/*"
  }
}
